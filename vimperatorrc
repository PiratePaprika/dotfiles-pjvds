" Set GUI options
set gui=none

" Use the alphabets at the hint mode
set hintchars=ifjklasdweuocvbnm

" don't focus any input elements automaticly when open pages
set focuscontent

" remove keys mapping I press by accident
noremap p <Nop>

" open LastPass
noremap <Leader>l :tab extoptions LastPass<CR>"

" Finish
echo ".vimperatorrc sourced"
